.flex {
  display: flex;
}

.flex.inline {
  display: inline-flex;
}

.flex.wrap {
  flex-wrap: wrap;
}

.flex.nowrap {
  flex-wrap: nowrap;
}

.flex.center {
  justify-content: center ;
}

.flex.middle {
  align-items: center ;
}

.flex .full {
  flex-grow: 1;
}

.flex.grid>div {
  flex-grow: 1;
}
